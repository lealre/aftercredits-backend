FROM golang:1.24-alpine AS builder

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . ./

# Build the routines binary
RUN go build -o routines ./cmd/routines/main.go

# Final stage
FROM alpine:latest

WORKDIR /app

# Copy the binary from builder
COPY --from=builder /app/routines /app/routines

# Install ca-certificates for HTTPS requests
RUN apk add --no-cache ca-certificates

# Set default command
CMD ["/app/routines"]

